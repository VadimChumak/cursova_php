
<div class="row">
    <form class="col offset-l4 offset-m3 l4 m6 s12 registration-form z-depth-5" method="post">
      <div class="row">
      <h3 class="center-align">Login</h3>
       <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" name="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" name="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <button class="btn waves-effect waves-light main-color" type="submit" name="action">Увійти
            <i class="material-icons right">send</i>
        </button>
        </div>
      </div>
      <div class="delimiter"></div>
      <div class="divider"></div>
      <div class="row">
        <div class="input-field col s12">
          <a href="./registration/add">Зареєструватися</a>
        </div>
      </div>
    </form>
  </div>
